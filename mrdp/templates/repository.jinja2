{%extends "base.jinja2"%}

{%block title%}Repository{%endblock%}

{%block body%}

{%include "header.jinja2"%}

<div class="container">

  <div class="page-header">
    <h1>Repository</h1>
  </div>

  <p>
    Select a dataset and click the button to download, or click on the dataset name to browse files in the dataset.
  </p>

  <div class="form-wrapper">
    <form class="form-inline" role="form" action="{{url_for('download')}}" method="post">
      <div class="row">
        <div class="col-md-12">
          <table class="table">
            <th class="col-md-5 text-left">
              Dataset Name
            </th>
            <th class="col-md-1 text-center">
              Select
            </th>

            {%if datasets%}
              {%for dataset in datasets%}
                <tr>
                  <td class="col-md-5 text-left">
                    <i class="fa fa-folder fa-lg"></i>&nbsp;
                    <a href="{{url_for('browse', dataset_id=dataset['id'])}}">
                      {{dataset["name"]}}
                    </a>
                  </td>
                  <td class="col-md-1 text-center">
                    <input type="checkbox" name="dataset" value="{{dataset['id']}}">
                  </td>
                </tr>
              {%endfor%}
            {%else%}
              <p>No datasets found.</p>
            {%endif%}
          </table>
        </div>
      </div>

      <div class="row">
        <div class="form-group col-md-5">
          <label class="col-md-4" for="year_filter">Select Year</label>
          <select class="col-md-3" name="year_filter">
            {%for year in range(1951, 2016)%}
              <option value="{{year}}">{{year}}</option>
            {%endfor%}
          </select>
        </div>
      </div>
      <br />
      <div class="form-actions">
        <input type="submit" class="btn btn-lg btn-primary" value="Download with Globus" />&nbsp;&nbsp;&nbsp;
      </div>
    </form>
   </div> <!-- form -->

</div> <!-- container -->
{%endblock%}
