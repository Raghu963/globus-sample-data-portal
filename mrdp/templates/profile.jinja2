{%extends "base.jinja2"%}

{%block title%}
  Profile
{%endblock%}

{%block body%}

{%include "header.jinja2"%}

  <div class="container">
    <form action="{{url_for('profile')}}" method="POST">
      <ul>
        <li>
           <label>
            Name:
            <input
              type="text"
              name="name"
              tabindex="1"
              accesskey="n"
              required="required"
              value="{{session['name']}}"
            >
          </label>
        </li>

        <li>
          <label>
            Email:
            <input
              type="email"
              name="email"
              tabindex="2"
              accesskey="e"
              required="required"
              value="{{session['email']}}"
            >
          </label>
        </li>

        <li>
          <label>
            Project:
            <input
              type="text"
              name="project"
              tabindex="3"
              accesskey="p"
              required="required"
              value="{{session['project']}}"
            >
          </label>
        </li>

        <li>
          <button type="submit">
            {%if session['is_authenticated']%}
              Save
            {%else%}
              Save and Login with Globus Auth
            {%endif%}
          </button>
        </li>
      </ul>
    </form>
  </div>
{%endblock%}
